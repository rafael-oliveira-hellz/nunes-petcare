{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "outDir": "dist",
        "rootDirs": ["src"],
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "typeRoots": ["node_modules/@types", "src/application/types"],
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
        "generators",
        "jest-all-config.js",
        "jest-db-config.js",
        "jest-mongodb-config.js",
        "jest-test-config.js",
        "jest.config.js"
    ]
}
